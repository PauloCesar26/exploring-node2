<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Admin</title>
  <link href="/output.css" rel="stylesheet">
  <style>
    input{
      border: 1px solid black;
      border-radius: 5px;
    }
  </style>
</head>
<body>
  <div class="h-screen flex flex-col">
    <div class="flex flex-1">
      <%- include("../includes/sidebar.ejs"); %>
  
      <main class="flex-1 p-6">
        <h2 class="text-2xl mb-5">Cadastro de Usuário</h2>

        <div class="bg-zinc-200 p-2 rounded-2xl">
          <form id="form-admin" action="/admin/register-user" method="POST" enctype="multipart/form-data">
            <label>Imagem do post:</label><br>
            <input id="file" type="file" name="userImg" required><br><br>
            
            <label>Nome:</label>
            <input id="name" type="text" name="name" required><br><br>
            
            <label>Email:</label>
            <input id="email" type="email" name="email" required><br><br>
  
            <label>Nome de identificação para esse post:</label>
            <input id="slug" type="text" name="slug" required><br><br>
            
            <button type="submit" class="h-10 p-3 bg-zinc-500 text-white font-medium rounded-lg hover:opacity-90 transition-all shadow-lg hover:shadow-xl flex items-center justify-center cursor-pointer">
              Enter
            </button>
          </form>
        </div>
      </main>
    </div>
  
    <%- include("../includes/footer.ejs"); %>
  </div>
</body>
</html>
